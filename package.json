{
  "name": "unit-test-express-typescript",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "author": "Khang Nguyen",
  "description": "This is repository about learn write unit test with ExpressJs - TypeScript. Codebase and tutorial by TrungQuanDev",
  "engines": {
    "node": ">=22.x"
  },
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/server.ts",
    "db:setup-indexes": "tsx src/scripts/setupIndexes.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node dist/server.js",
    "test": "jest --no-cache",
    "test:watch": "jest --watchAll --no-cache",
    "test:ci": "jest --ci --coverage --no-cache",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "tree": "npx tree -L 4 -I 'node_modules|.git|dist|build'"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.10",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "mongodb": "^6.20.0",
    "morgan": "^1.10.1",
    "pino": "^10.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  }
}
